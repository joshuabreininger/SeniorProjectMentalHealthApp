<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/testBG1"
        android:layout_width="411dp"
        android:layout_height="731dp"
        android:background="@raw/bg1"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <ImageView
        android:id="@+id/testBG2"
        android:layout_width="411dp"
        android:layout_height="731dp"
        android:background="@raw/bg2"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <ImageView
        android:id="@+id/testBG3"
        android:layout_width="411dp"
        android:layout_height="731dp"
        android:background="@raw/bg3"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <ImageView
        android:id="@+id/testBG4"
        android:layout_width="411dp"
        android:layout_height="731dp"
        android:background="@raw/bg4"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <ImageView
        android:id="@+id/testBG5"
        android:layout_width="411dp"
        android:layout_height="731dp"
        android:background="@raw/bg5"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <ImageView
        android:id="@+id/testBG6"
        android:layout_width="411dp"
        android:layout_height="731dp"
        android:background="@raw/bg6"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <ImageView
        android:id="@+id/player_image"
        android:layout_width="104dp"
        android:layout_height="208dp"
        android:foreground="@raw/default_character_2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.169"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/testBG1"
        app:layout_constraintVertical_bias="0.552" />

    <ImageView
        android:id="@+id/opponent_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/testBG1"
        app:layout_constraintVertical_bias="0.559" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/close_scene_button"
        android:layout_width="130dp"
        android:layout_height="60dp"
        android:background="@drawable/buttons"
        android:text="Close"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/testBG1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/testBG1"
        app:layout_constraintVertical_bias="0.834" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/close_scene_to_battle_button"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="560dp"
        android:background="@drawable/swordbig"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/testBG1"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/scenarioText"
        android:layout_width="358dp"
        android:layout_height="216dp"
        android:background="#D0515151"
        android:gravity="center"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.071" />


</androidx.constraintlayout.widget.ConstraintLayout>